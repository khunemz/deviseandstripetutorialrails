<p id="notice"><%= notice %></p>

<h1>Todo items</h1>
  <ul>
    <% @todos.each do |todo| %>
        <li><%= todo.task %></li>
        <li><%= todo.complete %></li>
        <%= link_to 'Remove', todo, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </ul>
<%= link_to 'New Todo', new_todo_path %>
